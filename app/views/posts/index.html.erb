<h1>Posts</h1>

<% @posts.each do |post| %>
<%# if post.user_id == current_user.id%>

<div class="col col-6 border rounded p-3 px-4">
    <div class="row">
        <div class="col col-9">

            <div class="row">
                <span><%= post.user_username %><span>
            </div>
            <div class="row">
                <em><%= post.user_email %></em>
            </div>
            <div class="row">
                <h6> <%= post.title %> </h6>
                <p> <%= post.description %></p>
            </div>
            <div class="row">
                <span><%= post.tags %></span>
            </div>
            <div class="row">
                <small><%= post.created_at %></small>
            </div>
        </div>
        <div class="col col-3 dropdown-first">
            <%= link_to image_tag("eye-fill.svg", :alt=> "Edit", :class => "update mx-auto"), post %>
            <div class="dropdown-content">
                <% if post.user_id == current_user.id%>
                <%= link_to image_tag("pencil-square.svg", :alt=> "Edit", :class => "update mx-auto"), edit_post_path(post) %>
                <%= link_to image_tag("trash-fill.svg", :alt=> "Edit", :class => "update mx-auto"), post, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
            </div>
        </div>
        <div class="col border rounded text-center">




        </div>
    </div>
</div>
<% end %>


<%= link_to 'New Post', new_post_path %>