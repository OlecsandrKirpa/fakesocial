<h1>Posts</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Tags</th>
            <th>User_id</th>
            <th>User_email</th>
            <th>User_username</th>
            <th>Created_at</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <%# if post.user_id == current_user.id%>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.description %></td>
            <td><%= post.tags %></td>
            <td><%= post.user_id %></td>
            <td><%= post.user_email %></td>
            <td><%= post.user_username %></td>
            <td><%= post.created_at %></td>
            <td><%= link_to 'Show', post %></td>
            <% if post.user_id == current_user.id%>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            <% else %>
            <td></td>
            <td></td>

            <% end %>
        </tr>
        <% end %>
        <%# end %>
    </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path %>